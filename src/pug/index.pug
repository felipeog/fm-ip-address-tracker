extends ./views/layout.pug

block title
  title Frontend Mentor | IP Address Tracker

block content
  include views/mixins/card

  main.wrapper
    .top
      section.search
        h1.search__title IP Address Tracker
        
        form.search__form
          input.search__input(type="text" name="ip" placeholder="Search for an IP")
          button.search__button(type="submit")
            img.search__icon(src="./img/icon-arrow.svg" alt="")

      section.content
        +card("IP address")(class="content__ip-address")
        +card("Location")(class="content__location")
        +card("Timezone")(class="content__timezone")
        +card("ISP")(class="content__isp")

    .bottom  
      #map
